<!DOCTYPE html>
<head>
  <title>{{dashboard}}</title>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
  <link
    href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet"
  />
  <link rel="stylesheet" href="style.css" />
  <script
    src="./lib/paho-mqtt.js"
    type="text/javascript"
  ></script>

  <script src="main.js" type="text/javascript" defer></script>
</head>
<body>
  <nav class="navbar blue" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="#">
        <img src="{{logo}}">
      </a>
    </div>
    <div class="navbar-menu navbar-end">
      <div class="navbar-item">
        <div class="field is-grouped">
          <p class="control">
            <a class="button yellow" href="http://smarthub.dev.lan:3000">
              <span class="icon">
                <i class="material-icons">query_stats</i>
              </span>
              <span>Grafana</span>
            </a>
          </p>
        </div>
      </div>
    </div>
  </nav>
  <br>
  <div class="container">
    <div class="columns is-multiline is-desktop">
      {{#devices}}
      <div class="column is-one-quarter-desktop">
        <div class="card grey mqtt-topic" id="{{{ topic }}}" {{#actions}}{{#color}}data-{{message}}="{{color}}"{{/color}}{{/actions}}>
          <header class="card-header">
            <p class="card-header-title">
              {{ title }}
            </p>
          </header>
          <div class="card-content">
          <div class="overlay">
            <div class="content has-text-centered">
              <h4><i class="is-size-two material-icons">{{ icon }}</i></h4>
              <h4>
                <span class="mqtt-payload">
                  <div class="loader-wrapper">
                      <div class="loader is-loading"></div>
                  </div>
                </span>
                {{#unit}}<span>{{unit}}</span>{{/unit}}
              </h4>
            </div>
          </div>
          </div>
          <footer class="card-footer">
            {{#actions}}
              {{#actionTopic}}
              {{#message}}
              <a
                class="card-footer-item {{#obs}}tooltipped{{/obs}}"
                {{#obs}} data-position="top" data-tooltip="{{obs}}"{{/obs}}
                {{#retained}}
                onclick="sendMessage('{{{actionTopic}}}','{{{message}}}', {{{retained}}})"
                {{/retained}}
                {{^retained}}
                onclick="sendMessage('{{{actionTopic}}}','{{{message}}}')"
                {{/retained}}
              >
                {{ message }}  
              </a>
              {{/message}}
              {{/actionTopic}}
            {{/actions}}
          </footer>
        </div>
      </div>
      {{/devices}}
    </div>
  </div>
</body>
